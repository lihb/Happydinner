<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.happydinner.activity">
    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="21"/>

    <application
            android:name="com.happydinner.base.ApplicationEx"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <activity
                android:name=".CoverFlowActivity"
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.happydinner.activity.FoodShowActivity"
                  android:screenOrientation="landscape"/>
        <activity android:name="com.happydinner.activity.OrderShowActivity"
                  android:screenOrientation="landscape"/>
        <activity android:name="com.happydinner.activity.PayActivity"
                  android:screenOrientation="landscape"/>
    </application>

</manifest>
