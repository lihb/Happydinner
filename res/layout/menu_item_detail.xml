<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="40dp"
        >
    <RelativeLayout
            android:id="@+id/loc_menu_rl1"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            >

        <ImageView
                android:id="@+id/menu_name_iv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image_1"
                />

        <TextView
                android:id="@+id/menu_name_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小炒肉"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                />

        <TextView
                android:id="@+id/menu_name_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="20"
                android:textColor="#ee9b2d"
                android:textSize="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                />

        <TextView
                android:id="@+id/menu_name_restaurant1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_name_title1"
                android:text="黄鹤天厨"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:background="@drawable/icon_restaurant_name"
                />
       <!-- <com.happydinner.ui.widget.MenuCountView
                android:id="@+id/menu_count_view1"
                android:layout_width="wrap_content"
