<?xml version="1.0" encoding="utf-8"?>
<com.handgold.pjdc.ui.widget.PopupMenuDetailView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relative_popup_top"
            android:layout_width="fill_parent"
            android:layout_height="248dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
                >
            <FrameLayout
                    android:id="@+id/popup_videoview_framelayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:fitsSystemWindows="false"
                    android:foregroundGravity="clip_horizontal|clip_vertical">

                <com.handgold.pjdc.ui.widget.PopupVideoView
                        android:id="@+id/popup_videoview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />
            </FrameLayout>
                <com.handgold.pjdc.ui.widget.RoundedImageView
                android:id="@+id/video_pic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image_5"
                />
            <ImageView
                android:id="@+id/iv_popup_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_icon_selector"
                android:layout_centerInParent="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_below="@+id/relative_popup_top"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/pop_view_bg"
            >

        <TextView
                android:id="@+id/popup_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30dp"
                android:text="打卤面"
                />
        <TextView
                android:id="@+id/popup_menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ff6000"
                android:textSize="30dp"
                android:text="20"
                />
        <TextView
                android:id="@+id/popup_menu_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popup_menu_name"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="老知青"
                android:background="@drawable/icon_restaurant_name"
                />
        <TextView
                android:id="@+id/popup_menu_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popup_menu_restaurant"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:ellipsize="end"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/popup_relative_operation"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            >
        <ImageView
                android:id="@+id/popup_imagview_sub"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sub_icon_selector"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

        <TextView
                android:id="@+id/popup_text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10"
                android:textColor="#ffffff"
                android:enabled="false"
                android:visibility="gone"
                />

        <ImageView
                android:id="@+id/popup_imagview_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_icon_selector"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>
    <ImageView
            android:id="@+id/iv_popup_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close_icon_selector"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
</com.handgold.pjdc.ui.widget.PopupMenuDetailView>