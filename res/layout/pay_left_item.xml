<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="12dp"
              android:background="@drawable/pay_selector"
        >
    <ImageView
            android:id="@+id/pay_icon_iv"
            android:layout_width="@dimen/pay_icon_width"
            android:layout_height="@dimen/pay_icon_height"
            android:duplicateParentState="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_wechat"
            />
    <TextView
            android:id="@+id/pay_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textSize="@dimen/pay_title_text_size"
            android:duplicateParentState="true"
            android:textColor="@color/pay_text_selector"
            android:layout_gravity="center_vertical"
            />


</LinearLayout>